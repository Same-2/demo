{
  "name": "demo-multi-nest",
  "version": "0.0.1",
  "description": "A NestJS monorepo with multiple applications.",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:app1": "nest start app1",
